{% extends 'base.html.twig' %}

{% block title %}Chaton {{ categorie }}{% endblock %}

{% block body %}
    <h1>Chaton {{ categorie }}</h1>

    <div style="display: flex; gap: 5vw; justify-content: center; align-items: center; margin-bottom: 2vh">

        {% for chaton in chatons %}

            <div class="card" style="width: 18rem;">
                <img src="{{ asset('uploads/' ~ chaton.Photo) }}" class="card-img-top" style="aspect-ratio: 1/1; object-fit: cover; " alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ chaton.Nom }}</h5>
                    <p class="card-text">{{ chaton.categorie.titre }}</p>
                    <a href="{{ path('app_chatons_edit', {'id': chaton.id}) }}" class="btn btn-dark">edit</a>
                </div>
            </div>

        {% endfor %}

    </div>

    <a href="{{ path('app_chatons_new') }}" class="btn btn-dark">Ajouter</a>
{% endblock %}
