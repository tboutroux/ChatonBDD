{% extends 'base.html.twig' %}

{% block title %}Photothèque de Chatons version BDD{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur la Photothèque de Chatons</h1>
    <p>Version BDD</p>

    <div style="display: flex; justify-content: space-around; align-items: center;">

        {% for categorie in categories %}

            <a class="btn btn-outline-secondary" aria-current="page" href="{{ path("app_chatons_categorie", {"categorie": categorie.id()}) }}">{{ categorie.getTitre() }}</a>

        {% endfor %}

    </div>

    <div class="d-grid gap-2" style="margin-top: 5vh;">
        <a class="btn btn-dark" aria-current="page" href="{{ path("app_chatons_new") }}">Ajouter un chaton</a>
    </div>

</div>
{% endblock %}
